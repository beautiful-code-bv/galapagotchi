{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  },
  "rules": {
    "no-bitwise": false,
    "no-console": false,
    "ordered-imports": [
      true,
      {
        "grouped-imports": true
      }
    ],
    "jsx-no-lambda": false,
    "object-literal-sort-keys": false,
    "semicolon": [
      true,
      "never"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "no-any": {
      "severity": "warning"
    },
    "eofline": true,
    "indent": [
      true,
      "spaces",
      4
    ],
    "quotemark": [
      true,
      "double"
    ],
    "member-ordering": [
      true,
      {
        "order": "instance-sandwich"
      }
    ],
    "no-consecutive-blank-lines": [
      true,
      2
    ],
    "prefer-const": false,
    "no-angle-bracket-type-assertion": false,
    "no-trailing-whitespace": true,
    "no-unused-expression": {
      "severity": "warning"
    },
    "max-classes-per-file": false,
    "typedef": [
      true,
      "call-signature",
      "parameter",
      "property-declaration"
    ],
    "no-empty": false,
    "max-line-length": [true, 160],
    "no-debugger": false,
    "promise-function-async": true,
    "no-null-keyword": true
  }
}
