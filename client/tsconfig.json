{
  "extends": "../tsconfig",
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "esnext",
    "lib": ["es6", "dom", "esnext"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "skipLibCheck": true
  },
  "exclude": [
    "assembly",
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
